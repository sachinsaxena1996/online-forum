.comment.clearfix
	.content
		%p.comment_content= comment.comment
		%p.comment_author= comment.user.email
	.buttons
		- if user_signed_in? && current_user.id == comment.user.id
			= link_to "Edit", edit_question_comment_path(comment.question, comment)
			= link_to "Delete", [comment.question, comment], method: :delete, data: { confirm: "Are you sure?" }